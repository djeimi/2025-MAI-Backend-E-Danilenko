server {
    listen 80;
    server_name localhost;

    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;

    location / {
        proxy_pass http://app:8000;

        proxy_pass_request_headers on;
    }

    location /static {
        alias /static;
    }

    #location /secret {
    #    auth_basic "No way";
    #    auth_basic_user_file /etc/nginx/auth.basic;

    #    alias /static;
    #}
}